function address()
{
  file_addresses=./scripts/addresses.json
  [ -z "$1" ] && jq keys $file_addresses && return 0
  [ "$1" == "ls" ] && jq keys $file_addresses && return 0

  jq -r ".${1}" $file_addresses
}

function ls_contracts()
{
